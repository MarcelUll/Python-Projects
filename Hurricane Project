# 1
# Update Recorded Damages

def update_damages(damages):

    conversion = {"M": 1000000,
                "B": 1000000000}
    
    updated_damages = []

    for damage in damages:
        if damage == 'Damages not recorded':
            updated_damages.append(damage)
        elif damage.endswith('M'):
            damage_m = damage.strip('M')
            updated_damages.append(float(damage_m)*1000000)
        elif damage.endswith('B'):
            damage_b = damage.strip("B")
            updated_damages.append(float(damage_b)*1000000000)
    
    return updated_damages

# test function by updating damages

damages_updated = (update_damages(damages))

