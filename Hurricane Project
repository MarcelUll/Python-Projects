# 3
# Organizing by Year
# create a new dictionary of hurricanes with year and key
def switch_keys_year(hurricanes_dict):
    hurricanes_by_year = {}

    for hurricane_name, data in hurricanes_dict.items():
        year = data['Year']

        # if the year is not yet a key, create a new list
        if year not in hurricanes_by_year:
            hurricanes_by_year[year] = []

        # add the hurricane data to the list for that year
        hurricanes_by_year[year].append(data)

    return hurricanes_by_year

#print(switch_keys_year(hurricanes))

# 4
# Counting Damaged Areas
# create dictionary of areas to store the number of hurricanes involved in
area_count = {}
for list in areas_affected:
    for area in list:
        if area in area_count:
            area_count[area] += 1
        else:
            area_count.update({area : 1})

print(area_count)
# 5
# Calculating Maximum Hurricane Count
# find most frequently affected area and the number of hurricanes involved in
def most_endangered_area(area_dict):
    max_area = None
    max_count = 0

    for area, count in area_dict.items():
        if count > max_count:
            max_count = count
            max_area = area
        
    return max_area

print(most_endangered_area(area_count))
# 6
# Calculating the Deadliest Hurricane
# find highest mortality hurricane and the number of deaths
def deadliest_hurricane(list1, list2):
    hurricane_name = None
    most_deaths = 0

    for name, death in zip(list1, list2):
        if death > most_deaths:
            hurricane_name = name
            most_deaths = death

    return (hurricane_name, most_deaths)

print(deadliest_hurricane(names, deaths))
# 7
# Rating Hurricanes by Mortality
# 1) Rating-Funktion mit match/case (Python 3.10+)
def mortality_rating(deaths: int) -> int:
    match deaths:
        case 0:
            return 0
        case d if 1 <= d <= 100:
            return 1
        case d if 101 <= d <= 500:
            return 2
        case d if 501 <= d <= 1000:
            return 3
        case d if 1001 <= d <= 10000:
            return 4
        case _:
            # Optional: Alles über 10.000 in eigene Kategorie
            return 5

# 2) Nach Rating gruppieren (und Rating im Datensatz mitführen)
def group_by_mortality_rating(hurricanes_by_name: dict):
    grouped: dict[int, list[dict]] = {}

    for data in hurricanes_by_name.values():
        r = mortality_rating(data['Deaths'])
        enriched = {**data, 'Mortality Rating': r}  # nicht in-place am Original mutieren
        grouped.setdefault(r, []).append(enriched)

    return grouped

# --- Nutzung ---
rated_hurricanes = group_by_mortality_rating(hurricanes)
print(rated_hurricanes)

# 8
# Calculating Hurricane Maximum Damage
def find_max_damage(hurricane_dict):
    max_name = None
    max_damage = 0

    for data in hurricane_dict.values():  
        damage = data['Damage']
    
        if isinstance(damage, (int, float)) and damage > max_damage:
            max_damage = damage
            max_name = data['Name']

    return max_name, max_damage

# find highest damage inducing hurricane and its total cost
print(find_max_damage(hurricanes))
# 9
# Rating Hurricanes by Damage
damage_scale = {0: 0,
                1: 100000000,
                2: 1000000000,
                3: 10000000000,
                4: 50000000000}

# categorize hurricanes in new dictionary with damage severity as key
def damage_rating(damage: int) -> int:

    if not isinstance(damage, (int, float)):
        return 0
     
    match damage:
        case 0:
            return 0
        case d if 100000000 <= d < 1000000000:
            return 1
        case d if 1000000000 <= d < 10000000000:
            return 2
        case d if 10000000000 <= d < 50000000000:
            return 3
        case d if 50000000000 <= d:
            return 4
        

# 2) Nach Rating gruppieren (und Rating im Datensatz mitführen)
def group_by_damage_rating(hurricanes):
    grouped: dict[int, list[dict]] = {}

    for data in hurricanes.values():
        r = damage_rating(data['Damage'])
        enriched = {**data, 'Damage Severity': r}  # nicht in-place am Original mutieren
        grouped.setdefault(r, []).append(enriched)

    return grouped

# --- Nutzung ---
damage_rated_hurricanes = group_by_damage_rating(hurricanes)
print(damage_rated_hurricanes)
